<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Editar Sobre</h2>
            </div>
            <div class="p-2">
                <span class="d-none d-md-block">
                    <a href="/sobre/vis-sobre" class="btn btn-outline-primary btn-sm">Visualizar</a>
                </span>
                <div class="dropdown d-block d-md-none">
                    <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Ações
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                        <a class="dropdown-item" href="/sobre/vis-sobre">Visualizar</a>
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <form method="POST" action="/sobre/update-sobre">
            <input name="_id" type="hidden" value="{{sobre._id}}">

            <div class="form-group">
                <label>Título do Topo</label>
                <input name="titulotop" type="text" class="form-control" id="titulotop" placeholder="Título do Topo" required value="{{sobre.titulotop}}">
            </div>
            <div class="form-group">
                <label>Subtítulo do Topo</label>
                <input name="subtitulotop" type="text" class="form-control" id="subtitulotop"
                    placeholder="Subtítulo do Topo" required value="{{sobre.subtitulotop}}">
            </div>
            <hr>
            <div class="form-group">
                <label>Título</label>
                <input name="titulo" type="text" class="form-control" id="titulo" placeholder="Título" required value="{{sobre.titulo}}">
            </div>
            <div class="form-group">
                <label>Descrição</label>
                <textarea name="subtitulo" class="form-control" id="subtitulo" placeholder="Subtítulo da Página"
                    rows="5" required>{{sobre.subtitulo}}</textarea>
            </div>
            <hr>
            <div class="form-row">
                <div class="form-group col-md-8">
                    <label>Título do Bloco 1</label>
                    <input name="titulosbum" type="text" class="form-control" id="titulosbum"
                        placeholder="Título do Bloco 1" required value="{{sobre.titulosbum}}">
                </div>
                <div class="form-group col-md-4">
                    <label>Ícone do Bloco 1</label>
                    <input name="iconesbum" type="text" class="form-control" id="iconesbum"
                        placeholder="Ícone do Bloco 1" required value="{{sobre.iconesbum}}">
                </div>
            </div>
            <div class="form-group">
                <label>Descrição do Bloco 1</label>
                <textarea name="descsbum" class="form-control" id="descsbum" placeholder="Descrição do Bloco 1" rows="5" required>{{sobre.descsbum}}</textarea>
            </div>
            <hr>
            <div class="form-row">
                <div class="form-group col-md-8">
                    <label>Título do Bloco 2</label>
                    <input name="titulosbdois" type="text" class="form-control" id="titulosbdois"
                        placeholder="Título do Bloco 2" required value="{{sobre.titulosbdois}}">
                </div>
                <div class="form-group col-md-4">
                    <label>Ícone do Bloco 2</label>
                    <input name="iconesbdois" type="text" class="form-control" id="iconesbdois"
                        placeholder="Ícone do Bloco 2" required value="{{sobre.iconesbdois}}">
                </div>
            </div>
            <div class="form-group">
                <label>Descrição do Bloco 2</label>
                <textarea name="descsbdois" class="form-control" id="descsbdois" placeholder="Descrição do Bloco 2" rows="5" required>{{sobre.descsbdois}}</textarea>
            </div>
            <hr>
            <div class="form-row">
                <div class="form-group col-md-8">
                    <label>Título do Bloco 3</label>
                    <input name="titulosbtres" type="text" class="form-control" id="titulosbtres"
                        placeholder="Título do Bloco 3" required value="{{sobre.titulosbtres}}">
                </div>
                <div class="form-group col-md-4">
                    <label>Ícone do Bloco 3</label>
                    <input name="iconesbtres" type="text" class="form-control" id="iconesbtres"
                        placeholder="Ícone do Bloco 3" required value="{{sobre.iconesbtres}}">
                </div>
            </div>
            <div class="form-group">
                <label>Descrição do Bloco 3</label>
                <textarea name="descsbtres" class="form-control" id="descsbtres" placeholder="Descrição do Bloco 3" rows="5" required>{{sobre.descsbtres}}</textarea>
            </div>
            <hr>
            <div class="form-group">
                <label>Título do CTA</label>
                <input name="titulobtn" type="text" class="form-control" id="titulobtn" placeholder="Título do CTA" required value="{{sobre.titulobtn}}">
            </div>
            <div class="form-group">
                <label>Link do CTA</label>
                <input name="urlbtn" type="text" class="form-control" id="urlbtn" placeholder="Link do CTA" required value="{{sobre.urlbtn}}">
            </div>
            
            <button type="submit" class="btn btn-warning">Salvar</button>
        </form>
    </div>
</div>