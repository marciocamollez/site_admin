<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Sobre</h2>
            </div>
            <div class="p-2">
                <span class="d-none d-md-block">
                    <a href="/sobre/edit-sobre" class="btn btn-outline-warning btn-sm">Editar</a>
                </span>
                <div class="dropdown d-block d-md-none">
                    <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Ações
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                        <a class="dropdown-item" href="/sobre/edit-sobre">Editar</a>
                    </div>
                </div>
            </div>
        </div>
        {{>_msg}}
        <hr>
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">{{sobre._id}}</dd>

            <dt class="col-sm-3">Título do Topo</dt>
            <dd class="col-sm-9">{{sobre.titulotop}}
            </dd>

            <dt class="col-sm-3">Subtítulo do Topo</dt>
            <dd class="col-sm-9">{{sobre.subtitulotop}}</dd>

            <dt class="col-sm-3">Título</dt>
            <dd class="col-sm-9">{{sobre.titulo}}
            </dd>

            <dt class="col-sm-3">Subtítulo</dt>
            <dd class="col-sm-9">{{sobre.subtitulo}}</dd>

            <dt class="col-sm-3 text-truncate">Ícone 1</dt>
            <dd class="col-sm-9">{{sobre.iconesbum}} - <i class="{{sobre.iconesbum}}"></i></dd>

            <dt class="col-sm-3 text-truncate">Título 1</dt>
            <dd class="col-sm-9">{{sobre.titulosbum}}</dd>

            <dt class="col-sm-3 text-truncate">Descrição 1</dt>
            <dd class="col-sm-9">{{sobre.descsbum}}</dd>

            <dt class="col-sm-3 text-truncate">Ícone 2</dt>
            <dd class="col-sm-9">{{sobre.iconesbdois}} - <i class="{{sobre.iconesbdois}}"></i></dd>

            <dt class="col-sm-3 text-truncate">Título 2</dt>
            <dd class="col-sm-9">{{sobre.titulosbdois}}</dd>

            <dt class="col-sm-3 text-truncate">Descrição 2</dt>
            <dd class="col-sm-9">{{sobre.descsbdois}}</dd>

            <dt class="col-sm-3 text-truncate">Ícone 3</dt>
            <dd class="col-sm-9">{{sobre.iconesbtres}} - <i class="{{sobre.iconesbtres}}"></i></dd>

            <dt class="col-sm-3 text-truncate">Título 3</dt>
            <dd class="col-sm-9">{{sobre.titulosbtres}}</dd>

            <dt class="col-sm-3 text-truncate">Descrição 3</dt>
            <dd class="col-sm-9">{{sobre.descsbtres}}</dd>

            <dt class="col-sm-3 text-truncate">Título CTA</dt>
            <dd class="col-sm-9">{{sobre.titulobtn}}</dd>

            <dt class="col-sm-3 text-truncate">Link CTA</dt>
            <dd class="col-sm-9">{{sobre.urlbtn}}</dd>

            <dt class="col-sm-3 text-truncate">Imagem do Banner</dt>
            <dd class="col-sm-9"><img class="img-fluid" src="/images/topo_sobre/descr-top-sobre.jpg" /></dd>

        </dl>
    </div>
</div>