<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Editar Informações de Contato</h2>
            </div>
            <div class="p-2">
                <span class="d-none d-md-block">
                    <a href="/contato-info/vis-contato-info" class="btn btn-outline-primary btn-sm">Visualizar</a>
                </span>
                <div class="dropdown d-block d-md-none">
                    <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Ações
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                        <a class="dropdown-item" href="/contato-info/vis-contato-info">Visualizar</a>
                    </div>
                </div>
            </div>
        </div>
        {{>_msg}}
        <hr>
        
        <form method="POST" action="/contato-info/update-contato-info">
            <input name="_id" type="hidden" value="{{contatoinfo._id}}">
            <div class="form-group">
                <label><span class="text-danger">*</span>Titulo</label>
                <input name="titulo" type="text" class="form-control" id="titulo" placeholder="Titulo" value="{{contatoinfo.titulo}}" required>
            </div>

            <div class="form-group">
                <label><span class="text-danger">*</span>Subtitulo</label>
                <input name="subtitulo" type="text" class="form-control" id="subtitulo" placeholder="Subtitulo" value="{{contatoinfo.subtitulo}}" required>
            </div>

            <div class="form-group">
                <label><span class="text-danger">*</span>Titulo do Formulário</label>
                <input name="tituloform" type="text" class="form-control" id="tituloform" placeholder="Titulo do formulário" value="{{contatoinfo.tituloform}}" required>
            </div>

            <div class="form-group">
                <label><span class="text-danger">*</span>Titulo do horário</label>
                <input name="titulohratend" type="text" class="form-control" id="titulohratend" placeholder="Titulo do horário de atendimento" value="{{contatoinfo.titulohratend}}" required>
            </div>

            <div class="form-group">
                <label><span class="text-danger">*</span>Horário de atendimento</label>
                <input name="hratend" type="text" class="form-control" id="hratend" placeholder="Horário de atendimento" value="{{contatoinfo.hratend}}" required>
            </div>

            <div class="form-group">
                <label><span class="text-danger">*</span>Titulo do Endereço</label>
                <input name="tituloend" type="text" class="form-control" id="tituloend" placeholder="Titulo do endereço" value="{{contatoinfo.tituloend}}" required>
            </div>

            <div class="form-group">
                <label><span class="text-danger">*</span>Logradouro</label>
                <input name="logradouro" type="text" class="form-control" id="logradouro" placeholder="Logradouro" value="{{contatoinfo.logradouro}}" required>
            </div>

            <div class="form-group">
                <label><span class="text-danger">*</span>Bairro</label>
                <input name="bairro" type="text" class="form-control" id="bairro" placeholder="Bairro" value="{{contatoinfo.bairro}}" required>
            </div>

            <div class="form-group">
                <label><span class="text-danger">*</span>Complemento</label>
                <input name="complemento" type="text" class="form-control" id="complemento" placeholder="Complemento" value="{{contatoinfo.complemento}}" required>
            </div>

            <div class="form-group">
                <label><span class="text-danger">*</span>Telefone</label>
                <input name="telefone" type="text" class="form-control" id="telefone" placeholder="Telefone" value="{{contatoinfo.telefone}}" required>
            </div>

            <p>
                <span class="text-danger">* </span>Campo obrigatório
            </p>
            <button type="submit" class="btn btn-warning">Salvar</button>
        </form>
    </div>
</div>