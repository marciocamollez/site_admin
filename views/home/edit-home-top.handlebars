<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Editar Home - Topo</h2>
            </div>
            <div class="p-2">
                <span class="d-none d-md-block">
                    <a href="/vis-home-top" class="btn btn-outline-primary btn-sm">Visualizar</a>
                </span>
                <div class="dropdown d-block d-md-none">
                    <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Ações
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                        <a class="dropdown-item" href="/vis-home-top">Visualizar</a>
                    </div>
                </div>
            </div>
        </div>
        {{>_msg}}
        <hr>
        <form method="POST" action="/update-home-top">
            <input name="_id" type="hidden" value="{{hometopo._id}}">

            <div class="form-group">
                <label>Título do Topo</label>
                <input name="titulo" type="text" class="form-control" id="titulo" placeholder="Título do Topo" required value="{{hometopo.titulo}}">
            </div>
            <div class="form-group">
                <label>Subtítulo do Topo</label>
                <input name="subtitulo" type="text" class="form-control" id="subtitulo"
                    placeholder="Subtítulo do Topo" required value="{{hometopo.subtitulo}}">
            </div>
            <div class="form-group">
                <label>Título CTA do Topo</label>
                <input name="titulobtn" type="text" class="form-control" id="titulobtn"
                    placeholder="Título CTA do Topo" required value="{{hometopo.titulobtn}}">
            </div>
            <div class="form-group">
                <label>Link CTA do Topo</label>
                <input name="urlbtn" type="text" class="form-control" id="urlbtn"
                    placeholder="Link CTA do Topo" required value="{{hometopo.urlbtn}}">
            </div>
                  
            <button type="submit" class="btn btn-warning">Salvar</button>
        </form>
    </div>
</div>