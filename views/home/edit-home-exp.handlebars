<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Editar Home - Experiência</h2>
            </div>
            <div class="p-2">
                <span class="d-none d-md-block">
                    <a href="/vis-home-exp" class="btn btn-outline-primary btn-sm">Visualizar</a>
                </span>
                <div class="dropdown d-block d-md-none">
                    <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Ações
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                        <a class="dropdown-item" href="/vis-home-exp">Visualizar</a>
                    </div>
                </div>
            </div>
        </div>
        {{>_msg}}
        <hr>
        <form method="POST" action="/update-home-exp">
            
            <div class="form-group">
                <label>Título da Experiência</label>
                <input name="titulo" type="text" class="form-control" id="titulo" placeholder="Título da Experiência" value="{{experiencia.titulo}}">
            </div>
            <div class="form-group">
                <label><span class="text-danger">*</span>Descrição</label>
                <textarea name="subtitulo" class="form-control" id="subtitulo" placeholder="Subtitulo"
                    rows="5">{{experiencia.subtitulo}}</textarea>
            </div>
            <div class="form-group">
                <label>Ícone da Experiência 1</label>
                <input name="iconeexpum" type="text" class="form-control" id="iconeexpum"
                    placeholder="Ícone da Experiência 1" value="{{experiencia.iconeexpum}}">
            </div>
            <div class="form-group">
                <label>Título da Experiência 1</label>
                <input name="tituloexpum" type="text" class="form-control" id="tituloexpum"
                    placeholder="Título da Experiência 1" value="{{experiencia.tituloexpum}}">
            </div>
            <div class="form-group">
                <label><span class="text-danger">*</span>Descrição 1</label>
                <textarea name="descexpum" class="form-control" id="descexpum" placeholder="Descrição do ícone um" rows="3">{{experiencia.descexpum}}</textarea>
            </div>
            <div class="form-group">
                <label>Ícone da Experiência 2</label>
                <input name="iconeexpdois" type="text" class="form-control" id="iconeexpdois"
                    placeholder="Ícone da Experiência 2" value="{{experiencia.iconeexpdois}}">
            </div>
            <div class="form-group">
                <label>Título da Experiência 2</label>
                <input name="tituloexpdois" type="text" class="form-control" id="tituloexpdois"
                    placeholder="Título da Experiência 2" value="{{experiencia.tituloexpdois}}">
            </div>
            <div class="form-group">
                <label><span class="text-danger">*</span>Descrição 2</label>
                <textarea name="descexpdois" class="form-control" id="descexpdois" placeholder="Descrição do ícone dois" rows="3">{{experiencia.descexpdois}}</textarea>
            </div>
            <div class="form-group">
                <label>Ícone da Experiência 3</label>
                <input name="iconeexptres" type="text" class="form-control" id="iconeexptres"
                    placeholder="Ícone da Experiência 3" value="{{experiencia.iconeexptres}}">
            </div>
            <div class="form-group">
                <label>Título da Experiência 3</label>
                <input name="tituloexptres" type="text" class="form-control" id="tituloexptres"
                    placeholder="Título da Experiência 3" value="{{experiencia.tituloexptres}}">
            </div>
            <div class="form-group">
                <label><span class="text-danger">*</span>Descrição 3</label>
                <textarea name="descexptres" class="form-control" id="descexptres" placeholder="Descrição do ícone tres" rows="3">{{experiencia.descexptres}}</textarea>
            </div>
            <div class="form-group">
                <label>Título do Botão</label>
                <input name="titulobtn" type="text" class="form-control" id="titulobtn" placeholder="Título do Botão" value="{{experiencia.titulobtn}}">
            </div>
            <div class="form-group">
                <label>Link do Botão</label>
                <input name="urlbtn" type="text" class="form-control" id="urlbtn"
                    placeholder="Link do Botão" value="{{experiencia.urlbtn}}">
            </div>
                  
            <button type="submit" class="btn btn-warning">Salvar</button>
        </form>
    </div>
</div>