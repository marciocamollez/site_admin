<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Home - Experiência</h2>
            </div>
            <div class="p-2">
                <span class="d-none d-md-block">
                    <a href="/edit-home-exp" class="btn btn-outline-warning btn-sm">Editar</a>
                </span>
                <div class="dropdown d-block d-md-none">
                    <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Ações
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                        <a class="dropdown-item" href="/edit-home-exp">Editar</a>
                    </div>
                </div>
            </div>
        </div>
        {{>_msg}}
        <hr>
        <dl class="row">

            <dt class="col-sm-3">Título da Experiência</dt>
            <dd class="col-sm-9">{{experiencia.titulo}}</dd>

            <dt class="col-sm-3">Descrição da Experiência</dt>
            <dd class="col-sm-9">{{experiencia.subtitulo}}</dd>

            <dt class="col-sm-3">Título do Botão</dt>
            <dd class="col-sm-9">{{experiencia.titulobtn}}</dd>

            <dt class="col-sm-3">Link do Botão</dt>
            <dd class="col-sm-9">{{experiencia.urlbtn}}</dd>

            <dt class="col-sm-3">Ícone da Experiência 1</dt>
            <dd class="col-sm-9">{{experiencia.iconeexpum}} - <i class="{{experiencia.iconeexpum}}"></i></dd>

            <dt class="col-sm-3">Título da Experiência 1</dt>
            <dd class="col-sm-9">{{experiencia.tituloexpum}}</dd>

            <dt class="col-sm-3">Descrição da Experiência 1</dt>
            <dd class="col-sm-9">{{experiencia.descexpum}}</dd>

            <dt class="col-sm-3">Ícone da Experiência 2</dt>
            <dd class="col-sm-9">{{experiencia.iconeexpdois}} - <i class="{{experiencia.iconeexpdois}}"></i></dd>

            <dt class="col-sm-3">Título da Experiência 2</dt>
            <dd class="col-sm-9">{{experiencia.tituloexpdois}}</dd>

            <dt class="col-sm-3">Descrição da Experiência 2</dt>
            <dd class="col-sm-9">{{experiencia.descexpdois}}</dd>

            <dt class="col-sm-3">Ícone da Experiência 3</dt>
            <dd class="col-sm-9">{{experiencia.iconeexptres}} - <i class="{{experiencia.iconeexptres}}"></i></dd>

            <dt class="col-sm-3">Título da Experiência 3</dt>
            <dd class="col-sm-9">{{experiencia.tituloexptres}}</dd>

            <dt class="col-sm-3">Descrição da Experiência 3</dt>
            <dd class="col-sm-9">{{experiencia.descexptres}}</dd>        

        

        </dl>
    </div>
</div>