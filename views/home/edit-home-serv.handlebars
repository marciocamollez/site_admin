<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Editar Home - Serviços</h2>
            </div>
            <div class="p-2">
                <span class="d-none d-md-block">
                    <a href="/vis-home-serv" class="btn btn-outline-primary btn-sm">Visualizar</a>
                </span>
                <div class="dropdown d-block d-md-none">
                    <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Ações
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                        <a class="dropdown-item" href="/vis-home-serv">Visualizar</a>
                    </div>
                </div>
            </div>
        </div>
        {{>_msg}}
        <hr>
        <form method="POST" action="/update-home-serv">
            <input name="_id" type="hidden" value="{{servico._id}}">

            <div class="form-group">
                <label>Título do Serviço</label>
                <input name="titulo" type="text" class="form-control" id="titulo" placeholder="Título do Serviço" value="{{servico.titulo}}">
            </div>
            <div class="form-group">
                <label>Ícone do Serviço 1</label>
                <input name="iconeservum" type="text" class="form-control" id="iconeservum"
                    placeholder="Ícone do Serviço 1" value="{{servico.iconeservum}}">
            </div>
            <div class="form-group">
                <label>Título do Serviço 1</label>
                <input name="tituloservum" type="text" class="form-control" id="tituloservum"
                    placeholder="Título do Serviço 1" value="{{servico.tituloservum}}">
            </div>
            <div class="form-group">
                <label>Descrição do Serviço 1</label>
                <input name="descservum" type="text" class="form-control" id="descservum"
                    placeholder="Descrição do Serviço 1" value="{{servico.descservum}}">
            </div>
            <div class="form-group">
                <label>Ícone do Serviço 2</label>
                <input name="iconeservdois" type="text" class="form-control" id="iconeservdois"
                    placeholder="Ícone do Serviço 2" value="{{servico.iconeservdois}}">
            </div>
            <div class="form-group">
                <label>Título do Serviço 2</label>
                <input name="tituloservdois" type="text" class="form-control" id="tituloservdois"
                    placeholder="Título do Serviço 2" value="{{servico.tituloservdois}}">
            </div>
            <div class="form-group">
                <label>Descrição do Serviço 2</label>
                <input name="descservdois" type="text" class="form-control" id="descservdois"
                    placeholder="Descrição do Serviço 2" value="{{servico.descservdois}}">
            </div>
            <div class="form-group">
                <label>Ícone do Serviço 3</label>
                <input name="iconeservtres" type="text" class="form-control" id="iconeservtres"
                    placeholder="Ícone do Serviço 3" value="{{servico.iconeservtres}}">
            </div>
            <div class="form-group">
                <label>Título do Serviço 3</label>
                <input name="tituloservtres" type="text" class="form-control" id="tituloservtres"
                    placeholder="Título do Serviço 3" value="{{servico.tituloservtres}}">
            </div>
            <div class="form-group">
                <label>Descrição do Serviço 3</label>
                <input name="descservtres" type="text" class="form-control" id="descservtres"
                    placeholder="Descrição do Serviço 3" value="{{servico.descservtres}}">
            </div>
                  
            <button type="submit" class="btn btn-warning">Salvar</button>
        </form>
    </div>
</div>